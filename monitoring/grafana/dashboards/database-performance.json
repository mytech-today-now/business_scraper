{
  "dashboard": {
    "id": null,
    "title": "Business Scraper - Database Performance",
    "tags": ["business-scraper", "database", "performance"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Database Query Rate",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(db_queries_total[5m])",
            "legendFormat": "{{operation}} on {{table}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "qps",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Query Response Times",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(db_query_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(db_query_duration_seconds_bucket[5m]))",
            "legendFormat": "50th percentile"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Active Database Connections",
        "type": "stat",
        "targets": [
          {
            "expr": "db_connections_active",
            "legendFormat": "{{pool}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Database Error Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(db_query_errors_total[5m]) / rate(db_queries_total[5m]) * 100",
            "legendFormat": "Error Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 1
                },
                {
                  "color": "red",
                  "value": 5
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 6,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "Slow Queries (>1s)",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(db_query_duration_seconds_bucket{le=\"1\"}[5m])",
            "legendFormat": "Queries > 1s"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "qps",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 6,
        "title": "Query Types Distribution",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (operation) (rate(db_queries_total[5m]))",
            "legendFormat": "{{operation}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 7,
        "title": "Table Access Patterns",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(db_queries_total[5m])",
            "legendFormat": "{{table}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "qps",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 16,
          "x": 8,
          "y": 16
        }
      },
      {
        "id": 8,
        "title": "Database Errors by Type",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(db_query_errors_total[5m])",
            "legendFormat": "{{error_type}} on {{table}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "eps",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 24
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "table",
          "type": "query",
          "query": "label_values(db_queries_total, table)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*"
        },
        {
          "name": "operation",
          "type": "query",
          "query": "label_values(db_queries_total, operation)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*"
        }
      ]
    },
    "annotations": {
      "list": []
    },
    "schemaVersion": 30,
    "version": 1,
    "links": []
  }
}
