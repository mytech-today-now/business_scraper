# Business Scraper Enhancement Workflow Configuration
# Copy this file to enhancement-workflow.env and customize as needed

# GitHub Configuration
GITHUB_TOKEN=your_github_token_here
GITHUB_REPOSITORY=mytech-today-now/business_scraper
GITHUB_DEFAULT_ASSIGNEE=mytech-today-now

# Default Enhancement Labels
ENHANCEMENT_LABELS=bug,enhancement,critical,needs review

# Project Structure Configuration
PROJECT_ROOT=/app
SRC_DIR=src
DOCS_DIR=docs
TESTS_DIR=src/tests
TEST_RESULTS_DIR=test-results
LOGS_DIR=logs
BACKUPS_DIR=backups

# Testing Configuration
TEST_TIMEOUT=60000
COVERAGE_THRESHOLD=95
MAX_WORKERS=2

# Test Commands (Business Scraper Specific)
TEST_UNIT_CMD=npm run test:unit
TEST_INTEGRATION_CMD=npm run test:integration
TEST_E2E_CMD=npm run test:e2e
TEST_SECURITY_CMD=npm run test:security
TEST_PERFORMANCE_CMD=npm run test:performance
TEST_ACCESSIBILITY_CMD=npm run test:accessibility
TEST_COVERAGE_CMD=npm run test:coverage

# File Pattern Matching
COMPONENT_PATTERN=src/view/components/**/*.{ts,tsx}
SERVICE_PATTERN=src/lib/**/*.ts
API_PATTERN=src/app/api/**/*.ts
MODEL_PATTERN=src/model/**/*.ts
CONTROLLER_PATTERN=src/controller/**/*.ts
HOOK_PATTERN=src/hooks/**/*.ts

# Documentation Files to Update
DOC_FILES=docs/UX-ToDo.html,docs/Remaining-Work.html,docs/MVP2.html,docs/MVP.html,docs/MVP_REFACTOR_SUMMARY.html,docs/MVP_IMPLEMENTATION_GUIDE.html,docs/API_DOCUMENTATION.html,docs/FEATURE_GUIDE.html,docs/TESTING.md,README.md,CHANGELOG.md

# Enhancement Workflow Settings
AUTO_CREATE_ISSUE=true
AUTO_UPDATE_DOCS=true
AUTO_RUN_TESTS=true
AUTO_CLOSE_ISSUE=true
CREATE_BACKUPS=true

# Console Log Configuration
CONSOLE_LOG_FILE=console_log_context.txt
MAX_LOG_LINES_PER_SECTION=10

# Environment Specific Settings
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1
DISABLE_REAL_OPERATIONS=true
TEST_MODE=true

# Advanced Settings
PARALLEL_TEST_EXECUTION=true
RETRY_FAILED_TESTS=true
MAX_TEST_RETRIES=3
GENERATE_COVERAGE_REPORT=true
UPLOAD_ARTIFACTS=true
ARTIFACT_RETENTION_DAYS=30

# Logging Configuration
LOG_LEVEL=INFO
VERBOSE_LOGGING=false
LOG_TO_FILE=true

# Security Settings
SCAN_FOR_SECRETS=true
VALIDATE_DEPENDENCIES=true
CHECK_VULNERABILITIES=true

# Performance Settings
MEMORY_LIMIT=2048
CPU_LIMIT=2

# Browser Testing Configuration
HEADLESS_BROWSER=true
BROWSER_TIMEOUT=30000
SCREENSHOT_ON_FAILURE=true

# API Testing Configuration
API_BASE_URL=http://localhost:3000
API_TIMEOUT=10000

# File Processing Configuration
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=.ts,.tsx,.js,.jsx,.json,.md,.html,.css,.scss
EXCLUDE_PATTERNS=node_modules,dist,build,.next,coverage

# Quality Gates
MIN_TEST_COVERAGE=95
MAX_COMPLEXITY_SCORE=10
ENFORCE_CODING_STANDARDS=true

# Optional: Override default behavior
# WORKSPACE_ROOT=/path/to/your/workspace
# MAX_TEST_TIMEOUT=60000
