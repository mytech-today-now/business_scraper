# Development Environment Configuration
# This file contains default settings for development environment

# Application
NEXT_PUBLIC_APP_NAME=Business Scraper App (Dev)
NEXT_PUBLIC_APP_VERSION=1.0.0-dev
NODE_ENV=development
NEXT_PUBLIC_DEBUG=true
PORT=3000

# Database Configuration (Development)
# Using local PostgreSQL for development
DB_HOST=localhost
DB_PORT=5432
DB_NAME=business_scraper_dev
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_MIN=2
DB_POOL_MAX=5
DB_POOL_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=5000
DB_SSL=false

# Security Configuration (Development)
# Authentication disabled by default for easier development
ENABLE_AUTH=false
SESSION_TIMEOUT=7200000
MAX_LOGIN_ATTEMPTS=10
LOCKOUT_DURATION=300000
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=1000
SCRAPING_RATE_LIMIT=100

# Authentication (Development)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Scraping Configuration (Development)
# More lenient settings for development
SCRAPING_TIMEOUT=60000
SCRAPING_MAX_RETRIES=5
SCRAPING_DELAY_MS=500
SEARCH_ENGINE_TIMEOUT=15000
MAX_SEARCH_RESULTS=100

# API Keys (Development)
# Use test/development API keys
GOOGLE_MAPS_API_KEY=
OPENCAGE_API_KEY=
BING_SEARCH_API_KEY=
YANDEX_SEARCH_API_KEY=

# Cache Configuration (Development)
CACHE_TYPE=memory
CACHE_MAX_SIZE=5000
CACHE_TTL=1800000

# Logging Configuration (Development)
LOG_LEVEL=debug
LOG_FORMAT=text
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=true
LOG_FILE_PATH=./logs/dev.log
LOG_MAX_FILE_SIZE=5242880
LOG_MAX_FILES=3

# Feature Flags (Development)
FEATURE_ENABLE_CACHING=true
FEATURE_ENABLE_RATE_LIMITING=false
FEATURE_ENABLE_METRICS=true
FEATURE_ENABLE_EXPERIMENTAL=true

# Development-specific settings
NEXT_TELEMETRY_DISABLED=1
DISABLE_ESLINT_PLUGIN=false
