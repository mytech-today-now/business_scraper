# Development Environment Configuration Template
# Business Scraper App - Next.js 14 with Adapted MVC Architecture
# 
# SECURITY NOTICE: This is a template file with placeholder values.
# Copy this file to development.env and replace all CHANGE_ME values.
# Generate secure secrets with: node scripts/generate-secrets.js --env development

# Application Configuration
NEXT_PUBLIC_APP_NAME=Business Scraper App (Dev)
NEXT_PUBLIC_APP_VERSION=1.3.0-dev
NODE_ENV=development
NEXT_PUBLIC_DEBUG=true
PORT=3000

# Database Configuration (Development)
# Using IndexedDB for development to enable offline capability
DB_TYPE=indexeddb
DB_HOST=localhost
DB_PORT=5432
DB_NAME=business_scraper_dev
DB_USER=postgres
DB_PASSWORD=CHANGE_ME_DEV_PASSWORD
DB_POOL_MIN=2
DB_POOL_MAX=5
DB_POOL_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=5000
DB_SSL=false

# Security Configuration (Development)
# Authentication disabled by default for easier development
ENABLE_AUTH=false
SESSION_TIMEOUT=7200000
MAX_LOGIN_ATTEMPTS=10
LOCKOUT_DURATION=300000
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=1000
SCRAPING_RATE_LIMIT=100

# Authentication (Development)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_ME_DEV_ADMIN_PASSWORD
# For production, use hashed password instead:
ADMIN_PASSWORD_HASH=GENERATE_SECURE_HASH
ADMIN_PASSWORD_SALT=GENERATE_SECURE_SALT

# Security Keys (Generate unique values even for development)
ENCRYPTION_KEY=GENERATE_32_BYTE_HEX_KEY
JWT_SECRET=GENERATE_JWT_SECRET
SESSION_SECRET=GENERATE_SESSION_SECRET

# Scraping Configuration (Development)
SCRAPING_TIMEOUT=30000
SCRAPING_MAX_RETRIES=3
SCRAPING_DELAY_MS=500
SEARCH_ENGINE_TIMEOUT=10000
MAX_SEARCH_RESULTS=50
BROWSER_POOL_SIZE=2
BROWSER_TIMEOUT=60000

# API Keys (Development - Leave empty to use fallback search engines)
AZURE_AI_FOUNDRY_API_KEY=
AZURE_AI_FOUNDRY_ENDPOINT=
AZURE_AI_FOUNDRY_REGION=eastus
GOOGLE_MAPS_API_KEY=
OPENCAGE_API_KEY=
BING_SEARCH_API_KEY=
YANDEX_SEARCH_API_KEY=

# Cache Configuration (Development)
CACHE_TYPE=memory
CACHE_MAX_SIZE=5000
CACHE_TTL=1800000

# Logging Configuration (Development)
LOG_LEVEL=debug
LOG_FORMAT=text
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=true
LOG_FILE_PATH=./logs/dev.log
LOG_MAX_FILE_SIZE=5242880
LOG_MAX_FILES=3

# Feature Flags (Development)
FEATURE_ENABLE_CACHING=true
FEATURE_ENABLE_RATE_LIMITING=true
FEATURE_ENABLE_METRICS=true
FEATURE_ENABLE_EXPERIMENTAL=true
FEATURE_ENABLE_BBB_INTEGRATION=true
FEATURE_ENABLE_CHAMBER_OF_COMMERCE=true
FEATURE_ENABLE_YELP_SCRAPING=true
FEATURE_ENABLE_DOMAIN_BLACKLIST=true
FEATURE_ENABLE_PER_INDUSTRY_BLACKLIST=true

# Development-specific settings
NEXT_TELEMETRY_DISABLED=1
DISABLE_ESLINT_PLUGIN=false
ENABLE_SOURCE_MAPS=true
ENABLE_HOT_RELOAD=true

# PWA/Service Worker Configuration (Development)
NEXT_PUBLIC_ENABLE_SW=false
NEXT_PUBLIC_CACHE_DURATION=3600000

# Testing Configuration
TEST_COVERAGE_THRESHOLD=80
TEST_TIMEOUT=30000
E2E_TEST_TIMEOUT=60000
ENABLE_TEST_MOCKS=true

# Data Export Configuration
EXPORT_ENABLE_CSV=true
EXPORT_ENABLE_XLSX=true
EXPORT_ENABLE_PDF=true
EXPORT_ENABLE_JSON=true
EXPORT_MAX_RECORDS=10000
