# Application Configuration
NEXT_PUBLIC_APP_NAME=Business Scraper App
NEXT_PUBLIC_APP_VERSION=1.0.0

# Database Configuration
# For production, use strong passwords generated with: node scripts/generate-secrets.js
DATABASE_URL=postgresql://business_scraper_user:CHANGE_ME_SECURE_PASSWORD@localhost:5432/business_scraper_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=business_scraper_db
DB_USER=business_scraper_user
DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# Database Connection Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=5000

# API Keys (Optional - for enhanced geocoding)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
OPENCAGE_API_KEY=your_opencage_api_key_here

# Search Engine API Keys (Optional - for enhanced search capabilities)
GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_google_search_engine_id_here

# Azure AI Foundry - Grounding with Bing Custom Search (replaces deprecated Bing Search API)
AZURE_AI_FOUNDRY_API_KEY=your_azure_ai_foundry_api_key_here
AZURE_AI_FOUNDRY_ENDPOINT=https://businessscraper.cognitiveservices.azure.com/
AZURE_AI_FOUNDRY_REGION=eastus

# Legacy Bing Search API (DEPRECATED - ends August 2025)
# BING_SEARCH_API_KEY=your_bing_search_api_key_here

YANDEX_SEARCH_API_KEY=your_yandex_search_api_key_here

# Scraping Configuration
SCRAPING_TIMEOUT=30000
SCRAPING_MAX_RETRIES=3
SCRAPING_DELAY_MS=1000

# Search Engine Configuration
SEARCH_ENGINE_TIMEOUT=10000
MAX_SEARCH_RESULTS=50

# Development
NODE_ENV=development
NEXT_PUBLIC_DEBUG=false

# Security Configuration
NEXT_PUBLIC_CSP_NONCE=auto-generated
ENABLE_AUTH=false
SESSION_TIMEOUT=3600000
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100
SCRAPING_RATE_LIMIT=10

# Authentication (Single User)
ADMIN_USERNAME=admin
# For development only - use plain text password
ADMIN_PASSWORD=CHANGE_ME_SECURE_PASSWORD
# For production, use hashed password instead (generate with scripts/generate-secrets.js):
ADMIN_PASSWORD_HASH=GENERATE_SECURE_HASH
ADMIN_PASSWORD_SALT=GENERATE_SECURE_SALT

# Security Keys (CRITICAL: Generate unique values for production)
ENCRYPTION_KEY=GENERATE_32_BYTE_HEX_KEY
JWT_SECRET=GENERATE_JWT_SECRET
SESSION_SECRET=GENERATE_SESSION_SECRET

# Performance
NEXT_PUBLIC_ENABLE_SW=true
NEXT_PUBLIC_CACHE_DURATION=3600000
