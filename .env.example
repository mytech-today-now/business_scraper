# =============================================================================

FEATURE_GDPR_ENABLED=true
FEATURE_CCPA_ENABLED=true
FEATURE_SOC2_ENABLED=true
FEATURE_AUDIT_LOGGING=true
FEATURE_DATA_ENCRYPTION=true
FEATURE_CONSENT_MANAGEMENT=true
FEATURE_DATA_RETENTION=true
