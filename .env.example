CONSENT_STORAGE=false
CONSENT_ENRICHMENT=false
CONSENT_ANALYTICS=false
CONSENT_MARKETING=false

# =============================================================================
# COMPLIANCE MONITORING
# =============================================================================

# Compliance dashboard
COMPLIANCE_DASHBOARD_ENABLED=true
COMPLIANCE_METRICS_ENABLED=true

# Data breach detection
BREACH_DETECTION_ENABLED=true
BREACH_NOTIFICATION_EMAIL=security@yourcompany.com
BREACH_RESPONSE_TEAM=incident-response@yourcompany.com

# =============================================================================
